---
import Layout from "../../layouts/Layout.astro";
import GraphicSpecies from "../../components/GraphicSpecies.astro";
---

<Layout title="Adelie — Espèces">
  <h1>Espèce : Adelie</h1>

  <nav class="nav-pills" aria-label="Espèces">
    <a
      href="/species/Adelie"
      aria-current={Astro.url.pathname.endsWith("/Adelie") ? "page" : undefined}
      >Adelie</a
    >
    <a
      href="/species/Gentoo"
      aria-current={Astro.url.pathname.endsWith("/Gentoo") ? "page" : undefined}
      >Gentoo</a
