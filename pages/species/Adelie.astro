    <a
      href="/species/Chinstrap"
      aria-current={Astro.url.pathname.endsWith("/Chinstrap")
        ? "page"
        : undefined}>Chinstrap</a
    >
  </nav>

  <GraphicSpecies species="Adelie" />
</Layout>
