---
import Layout from "../../layouts/Layout.astro";
import GraphicSpecies from "../../components/GraphicSpecies.astro";
---

<Layout title="Gentoo — TP3">
  <h1 class="text-3xl font-extrabold mb-4">Espèce : Gentoo</h1>

  <div class="mb-4">
    <label for="species" class="sr-only">Changer d’espèce</label>
    <select
      id="species"
      class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm"
    >
      <option value="Adelie">Adelie</option>
      <option value="Chinstrap">Chinstrap</option>
      <option value="Gentoo" selected>Gentoo</option>
    </select>
  </div>

  <GraphicSpecies species="Gentoo" />

  <script>
    const sel = document.querySelector("#species");
    sel?.addEventListener("change", (evt) => {
      const value = evt.target.value;
      location.pathname = "/species/" + value + "/"; // ← slash final
    });
  </script>
</Layout>
